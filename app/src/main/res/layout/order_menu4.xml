<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:gravity="bottom"
        app:umanoDragView="@id/dragView"
        app:umanoScrollableView="@id/listView"
        app:umanoPanelHeight="70dp"
        app:umanoOverlay="false"
        app:umanoParallaxOffset="200dp"
        app:umanoShadowHeight="10dp">
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPink"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPink">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👉주문중👈"
                android:textSize="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/font1"
                android:background="#FFFFFF"
                android:padding="10dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF">


            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/menu1"
                    android:drawablePadding="10dp"
                    android:text="순살 안동찜닭"
                    android:textSize="15dp"
                    android:fontFamily="@font/font1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_menu4"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="천연양념과 닭다리살로만\n 조리하여 육질이\n 예술이며 최고급\n 웰빙 메뉴"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/font1"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🤜기본🤛"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/font1"
                    android:background="#FFFFFF"/>

            <RadioGroup android:fontFamily="@font/font1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F0F0F0"
                        android:id="@+id/rg1">
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小 (18000원)"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:id="@+id/rbtn_1_1" />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中 (25000원)"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:id="@+id/rbtn_1_2" />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大 (32000원)"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:id="@+id/rbtn_1_3" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🤜맛🤛"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/font1"
                    android:background="#FFFFFF"/>

            <RadioGroup android:fontFamily="@font/font1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F0F0F0"
                        android:id="@+id/rg2">
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오리지널맛"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:fontFamily="@font/font1"
                        android:layout_margin="5dp"
                        android:id="@+id/rbtn_2_1" />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="순한맛"
                        android:textSize="15dp"
                        android:fontFamily="@font/font1"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:id="@+id/rbtn_2_2" />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매운맛"
                        android:textSize="15dp"
                        android:fontFamily="@font/font1"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:id="@+id/rbtn_2_3" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🤜추가토핑 (2000원)🤛"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/font1"
                    android:background="#FFFFFF"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당면추가"
                    android:textSize="15dp"
                    android:fontFamily="@font/font1"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:id="@+id/checkBox1"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감자추가"
                    android:textSize="15dp"
                    android:fontFamily="@font/font1"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:id="@+id/checkBox2"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만두추가"
                    android:textSize="15dp"
                    android:fontFamily="@font/font1"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:id="@+id/checkBox3"/>

        </LinearLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주문하기"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/font1"
                android:background="@color/colorYellow"
                android:id="@+id/btn_register"/>
    </LinearLayout>
</ScrollView>
    <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="🛍장바구니🛍"
                    android:textSize="20dp"
                    android:fontFamily="@font/font1" />
        </LinearLayout>

        <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:textSize="20dp"
                android:fontFamily="@font/font1">
        </ListView>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>