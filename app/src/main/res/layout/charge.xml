<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPink"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPink">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👉포인트 충전중👈"
                android:textSize="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/font1"
                android:background="#FFFFFF"
                android:padding="10dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF">


            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/money"
                    android:drawablePadding="10dp"
                    android:text="내찜닭포인트"
                    android:textSize="15dp"
                    android:fontFamily="@font/font1"
                    android:background="#FFFFFF"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_menu1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="포인트를 통해\n맛있는 찜닭을 결제하세요\n💸🙆💸🙆💸🙆💸"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/font1"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🤜충전하기🤛"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/font1"
                    android:background="#FFFFFF"
                    android:padding="3dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="충전금액"
                    android:textSize="20dp"
                    android:fontFamily="@font/font1"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/text_PW"/>

            <EditText android:layout_width="match_parent"
                      android:layout_marginRight="40dp"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:hint="충전 금액을 입력해주세요"
                      android:layout_gravity="left"
                      android:layout_marginLeft="40dp"
                      android:layout_marginBottom="10dp"
                      android:id="@+id/edit_point"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="충전한 포인트를 통해 결제를 진행하실 수 있습니다."
                    android:textSize="10dp"
                    android:fontFamily="@font/font1"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="충전하기"
                android:textSize="20dp"
                android:fontFamily="@font/font1"
                android:background="@color/colorYellow"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/btn_charge"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/colorPink"
                android:layout_margin="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👉내가 찜한 닭 (한신대점)"
                    android:textSize="15dp"
                    android:fontFamily="@font/font1"
                    android:background="@color/colorPink"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  전화번호: 050-7465-4143"
                    android:textSize="12dp"
                    android:fontFamily="@font/font1"
                    android:background="@color/colorPink"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  주소: 경기 오산시 양산로 347(지번: 양산동 379-1)"
                    android:textSize="12dp"
                    android:fontFamily="@font/font1"
                    android:background="@color/colorPink"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  영업시간: 매일 11:00 - 22:00"
                    android:textSize="12dp"
                    android:fontFamily="@font/font1"
                    android:background="@color/colorPink"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>