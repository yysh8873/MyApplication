<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPink"
        android:orientation="vertical"
        tools:context=".MainActivity">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorPink">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최소주문 금액 👉없습니다👈 🤗"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/font1"
            android:background="#FFFFFF"
            android:padding="5dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF">


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/menu1"
                android:drawablePadding="10dp"
                android:text="안동찜닭"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/btn_menu1"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/menu2"
                android:drawablePadding="10dp"
                android:text="고추장찜닭"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/btn_menu2"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/menu3"
                android:drawablePadding="10dp"
                android:text="치즈순살찜닭"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/btn_menu3"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF">


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/menu1"
                android:drawablePadding="10dp"
                android:text="순살 안동찜닭"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/btn_menu4"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/menu2"
                android:drawablePadding="10dp"
                android:text="순살 고추장찜닭"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/btn_menu5"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tip"
                android:drawablePadding="10dp"
                android:text="토핑추가💰👈"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/font1"
                android:background="#EFEFEF"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:enabled="false"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🤜추가 메뉴🤛"
                android:textSize="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/font1"
                android:background="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공기밥"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:padding="5dp"
                android:layout_weight="0.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font1"
                android:text="1000원                 "
                android:textSize="15dp"
                android:gravity="right"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="20dp"
                android:id="@+id/sideminus1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/sidecount1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/sideplus1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탄산음료(1.25L)"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:padding="5dp"
                android:layout_weight="0.4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font1"
                android:text="2000원                 "
                android:textSize="15dp"
                android:gravity="right"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="20dp"
                android:id="@+id/sideminus2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/sidecount2"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/sideplus2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소주"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:padding="5dp"
                android:layout_weight="0.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font1"
                android:text="4000원                 "
                android:textSize="15dp"
                android:gravity="right"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="20dp"
                android:id="@+id/sideminus3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/sidecount3"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/sideplus3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="30dp">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/colorPink"
            android:layout_margin="10dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👉내가 찜한 닭 (한신대점)"
                android:textSize="15dp"
                android:fontFamily="@font/font1"
                android:background="@color/colorPink"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  전화번호: 050-7465-4143"
                android:textSize="12dp"
                android:fontFamily="@font/font1"
                android:background="@color/colorPink"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  주소: 경기 오산시 양산로 347(지번: 양산동 379-1)"
                android:textSize="12dp"
                android:fontFamily="@font/font1"
                android:background="@color/colorPink"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  영업시간: 매일 11:00 - 22:00"
                android:textSize="12dp"
                android:fontFamily="@font/font1"
                android:background="@color/colorPink"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>